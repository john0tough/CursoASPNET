@model Vidly.ViewModel.MoviesViewModel

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", null, new { @class = "btn btn-primary" })
<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<th>Movie Name</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var movie in Model.Movies)
			{
				<tr>
					<td>@Html.ActionLink(movie.Name, "Edit", new { Id = movie.Id }, null)</td>
					<td>@movie.ReleaseDate.ToString("yyyy/MM/dd")</td>
				</tr>
			}
		}
	</tbody>
</table>

